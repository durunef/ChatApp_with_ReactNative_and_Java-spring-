{
  "compilerOptions": {
    "target": "ES2015",
    "lib": [
      "ES2015",
      "DOM"
    ],
    "strict": true,
    "jsx": "react-native",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@/screens/*": [
        "./screens/*"
      ],
      "@/constants/*": [
        "./constants/*"
      ]
    },
    "esModuleInterop": true,
    "moduleResolution": "node"
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "extends": "expo/tsconfig.base"
}
